<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="form-errors">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<!-- ✅ Welcome message -->
<h2>Welcome <%= accountData.account_firstname %></h2>

<!-- ✅ Update account link (for all users) -->
<p>
  <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
</p>

<!-- ✅ Inventory management section (Admin or Employee only) -->
<% if (accountData.account_type === 'Admin' || accountData.account_type === 'Employee') { %>
  <h3>Inventory Management</h3>
  <p><a href="/inventory">Go to Inventory Management</a></p>
<% } %>
